@page "/NextPage/{UserId}"
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

<h1>Welcome to Next Page</h1>

<p>The user's email is: @userid</p>

<SHoper.Component.AdminComponents.ChangeUserRole UserId="@userid"></SHoper.Component.AdminComponents.ChangeUserRole>
@code {
    [Parameter]
    public string userid { get; set; }

    protected override Task OnParametersSetAsync()
    {
        // No need to retrieve the email from query parameters; it's directly available as a route parameter
        return base.OnParametersSetAsync();
    }
}
